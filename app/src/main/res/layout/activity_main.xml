<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.android.moranlee.mysomeapplication.MainActivity">

    <LinearLayout
        android:layout_width="1dp"
        android:layout_height="400dp"
        android:background="@android:color/darker_gray"
        android:layout_centerHorizontal="true"
        android:id="@+id/linear"
        android:orientation="vertical"
        ></LinearLayout>

   <RelativeLayout
       android:layout_width="wrap_content"
       android:layout_height="400dp"
       android:layout_alignLeft="@id/linear"
       android:layout_alignParentStart="true"
       android:layout_alignParentLeft="true"
       android:layout_toLeftOf="@+id/linear"
       android:layout_toStartOf="@+id/linear">

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Team A"
           android:textSize="16sp"
           android:textColor="#616161"
           android:fontFamily="sans-serif-medium"
           android:layout_centerHorizontal="true"
           android:layout_marginTop="16dp"
           android:layout_marginBottom="16dp"
           android:id="@+id/teamA"
           />

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="0"
           android:layout_below="@id/teamA"
           android:textSize="56sp"
           android:textColor="#000000"
           android:fontFamily="sans-serif-light"
           android:layout_centerHorizontal="true"
           android:layout_marginBottom="24dp"
           android:id="@+id/markA"
           />

       <Button
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="+3 points"
           android:layout_below="@id/markA"
           android:layout_centerHorizontal="true"
           android:layout_marginLeft="24dp"
           android:layout_marginRight="24dp"
           android:background="#FF9800"
           android:id="@+id/add3A"
           android:onClick="add3A"
           />

       <Button
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="+2 points"
           android:layout_below="@id/add3A"
           android:layout_centerHorizontal="true"
           android:layout_marginLeft="24dp"
           android:layout_marginRight="24dp"
           android:layout_marginBottom="8dp"
           android:layout_marginTop="8dp"
           android:background="#FF9800"
           android:id="@+id/add2A"
           android:onClick="add2A"
           />

       <Button
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Free throw"
           android:layout_below="@id/add2A"
           android:layout_centerHorizontal="true"
           android:layout_marginLeft="24dp"
           android:layout_marginRight="24dp"
           android:layout_marginBottom="8dp"
           android:layout_marginTop="8dp"
           android:background="#FF9800"
           android:id="@+id/freeA"
           />

   </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="400dp"
        android:layout_alignParentRight="true"
        android:layout_alignRight="@id/linear"
        android:layout_toRightOf="@id/linear"
        >
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Team B"
          android:textSize="16sp"
          android:textColor="#616161"
          android:fontFamily="sans-serif-medium"
          android:layout_centerHorizontal="true"
          android:layout_marginTop="16dp"
          android:layout_marginBottom="16dp"
          android:id="@+id/teamB"
          />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:layout_below="@id/teamB"
            android:textSize="56sp"
            android:textColor="#000000"
            android:fontFamily="sans-serif-light"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="24dp"
            android:id="@+id/markB"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+3 points"
            android:layout_below="@id/markB"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:background="#FF9800"
            android:id="@+id/add3B"
            android:onClick="add3B"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+2 points"
            android:layout_below="@id/add3B"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:background="#FF9800"
            android:id="@+id/add2B"
            android:onClick="add2B"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Free throw"
            android:layout_below="@id/add2B"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:background="#FF9800"
            android:id="@+id/freeB"
            />

    </RelativeLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:text="reset"
        android:id="@+id/reset"
        android:onClick="reset"
        />

</RelativeLayout>


